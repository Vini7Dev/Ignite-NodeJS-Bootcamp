{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl": "./src",
        "rootDir": "./",
        "outDir": "./dist",
        "paths": {
            "@models/*": ["models/*"],
            "@config/*": ["config/*"],
            "@shared/*": ["shared/*"],
            "@utils/*": ["utils/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
